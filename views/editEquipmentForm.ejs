<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Equipment Rental</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/equipments">Equipments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users">Users</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<form id="editordelete" method="POST">
    <div class="row mb-3 offset-sm-1">
        <label for="inputName3" class="col-sm-1 col-form-label">Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="inputName3" name="Name" value="<%= equipment.Name %>" required>
        </div>
        <label for="inputLocation3" class="col-sm-1 col-form-label">Location</label>
        <div class="col-sm-4">
            <select class="form-select" id="inputLocation3" name="Location">
                <option value="<%= equipment.Location %>"><%= equipment.Location %></option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
            </select>
        </div>
    </div>
    <div class="row mb-3 offset-sm-1">
        <label for="inputDescription3" class="col-sm-1 col-form-label">Description</label>
        <div class="col-sm-9">
            <textarea class="form-control" id="inputDescription3" name="Description" rows="5"><%= equipment.Description %></textarea>
        </div>
    </div>
    <div class="row mb-3 offset-sm-1">
        <label for="inputImageURL3" class="col-sm-1 col-form-label">ImageURL</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="inputImageURL3" name="ImageURL" value="<%= equipment.ImageURL %>">
        </div>
        <label for="inputContactPn3" class="col-sm-1 col-form-label">ContactPerson</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="inputContactP3" name="ContactPerson" value="<%= equipment.ContactPerson %>" required>
        </div>
        <label for="inputColor" class="col-sm-1 col-form-label">Colour</label>
        <div class="col-sm-1">
            <input type="color" class="form-control" id="inputColor" name="Colour" value="<%= equipment.Colour %>">
        </div>
    </div>
    <div class="col-sm-4">
        <div class="row mb-1">
            <div class="col-sm-9 offset-sm-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" name="Highlight">
                    <label class="form-check-label" for="gridCheck1">
                        Highlight
                    </label>
                </div>
            </div>
        </div>
        <div class="col-sm-9 offset-sm-3">
            <button type="submit" class="btn btn-primary" onclick="setAction('/equipment/edit/<%= equipment._id %>/save')">Save</button>
            <button type="submit" class="btn btn-danger" onclick="setAction('/equipment/delete/<%= equipment._id %>')">Delete</button>
        </div>
    </div>
</form>
<script>
    function setAction(action) {
        document.getElementById('editordelete').action = action;
    }
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector("option[value='<%= equipment.Location %>']").selected = true;
        document.querySelector("#gridCheck1").checked = "<%= equipment.Highlight %>" == "true";
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>